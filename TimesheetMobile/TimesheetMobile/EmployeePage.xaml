<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimesheetMobile.EmployeePage">
    <StackLayout>
            <Button Text="Load Employees" Clicked="LoadEmployees" Margin="30"></Button>
            <ListView Margin="30" x:Name="employeeList">

            </ListView>
        <StackLayout Orientation="Horizontal">
            <Label Text="Latitude: "></Label>
            <Label x:Name="LatitudeLabel" Text="0.00"></Label>
            <Label Text="Longitude:"></Label>
            <Label x:Name="LongitudeLabel" Text="0.00"></Label>
        </StackLayout>
            <Button Text="List Work Assignments" Clicked="ListWorkAssignments"></Button>
        </StackLayout>
    
</ContentPage>